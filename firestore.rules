rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the requesting user is the owner of the data.
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId} {
      // Allow users to read and manage their own user profile document.
      allow get, update, delete: if isOwner(userId);
      
      // Allow users to create their own profile document.
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      
      // Do not allow anyone to list all user documents.
      allow list: if false;

      // Apply rules to all subcollections of a user document (transactions, accounts, etc.)
      match /{subcollection}/{docId} {

        // Allow owner to read their own documents (single or list).
        allow read: if isOwner(userId);

        // Allow owner to create documents, ensuring the data is correctly tagged with their userId.
        allow create: if isOwner(userId) && request.resource.data.userId == userId;

        // Allow owner to update documents, but prevent changing the owner.
        allow update: if isOwner(userId) && request.resource.data.userId == resource.data.userId;

        // Allow owner to delete their documents.
        allow delete: if isOwner(userId);
      }
    }
  }
}
