rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rule for the users collection itself
    match /users/{userId} {
      // Users can read, create, and update their own user profile document.
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
    }

    // Rule for the transactions subcollection
    match /users/{userId}/transactions/{transactionId} {
      // Users can read and write their own transactions.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rule for the categories subcollection
    match /users/{userId}/categories/{categoryId} {
      // Users can read and write their own categories.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rule for the bankAccounts subcollection
    match /users/{userId}/bankAccounts/{bankAccountId} {
      // Users can read and write their own bank accounts.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rule for the creditCards subcollection
    match /users/{userId}/creditCards/{creditCardId} {
      // Users can read and write their own credit cards.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rule for the savingsRules subcollection
    match /users/{userId}/savingsRules/{savingsRuleId} {
      // Users can read and write their own savings rules.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
