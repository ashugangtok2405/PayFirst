rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // This rule allows a user to read and write their own top-level user document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // This single rule recursively grants access to a user's own documents
    // in any subcollection (e.g., transactions, categories).
    match /users/{userId}/{subcollection}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
