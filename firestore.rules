rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rule for user profile documents
    match /users/{userId} {
      // A user can read, create, and update their own profile document.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rule for ALL subcollections under a user's document
    // (transactions, categories, bankAccounts, etc.)
    match /users/{userId}/{subcollection}/{docId} {
        // A user can read and write any document in any of their own subcollections.
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
