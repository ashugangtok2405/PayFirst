rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // This single rule recursively grants access to a user's own documents.
    // It covers their main profile and all documents in any subcollections
    // like transactions, categories, etc.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
